# =============================================================================
# TIMEZONE
# =============================================================================
TZ=Europe/London

# =============================================================================
# POSTGRES DATABASE CONFIGURATION
# =============================================================================
POSTGRES_USER=n8n
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD
POSTGRES_DB=n8n

# =============================================================================
# N8N CONFIGURATION
# =============================================================================
# Generate a secure random key: openssl rand -hex 32
N8N_ENCRYPTION_KEY=CHANGE_ME_GENERATE_RANDOM_KEY

# n8n host binding (default: 127.0.0.1 for LAN-only access)
# WARNING: Do not change to 0.0.0.0 unless you have proper authentication!
N8N_HOST=127.0.0.1
N8N_PORT=5678

# n8n public webhook URL (for external access, if using reverse proxy)
N8N_WEBHOOK_URL=http://127.0.0.1:5678/

# n8n internal webhook URL (used by discord-bridge to forward messages)
# This is the Docker internal network URL - do not change unless you know what you're doing
N8N_INTERNAL_WEBHOOK_URL=http://n8n:5678/webhook/cme-discord

# n8n optional settings (defaults shown)
N8N_PROXY_HOPS=1
N8N_DIAGNOSTICS_ENABLED=false
N8N_PERSONALIZATION_ENABLED=false

# =============================================================================
# CISCO CME ROUTER CONFIGURATION
# =============================================================================
# Router IP address on your LAN
CME_ROUTER_HOST=10.20.102.11

# Router admin credentials
CME_ROUTER_USERNAME=admin
CME_ROUTER_PASSWORD=CHANGE_ME_ROUTER_PASSWORD

# Router name/identifier (used in backups and logging)
CME_ROUTER_NAME=a14-con

# Session timeout in seconds (default: 30)
CME_SESSION_IDLE_TIMEOUT_SECONDS=30

# =============================================================================
# CME TOOLS API CONFIGURATION
# =============================================================================
# Generate a secure API key: openssl rand -hex 24
CME_API_KEY=CHANGE_ME_GENERATE_API_KEY

# =============================================================================
# GIT BACKUP CONFIGURATION
# =============================================================================
# Git repository URL for backups
CME_GIT_REMOTE_URL=https://git.int.a14.io/a14/a14-cfg.git

# Git branch to push backups to (default: main)
CME_GIT_BRANCH=main

# Folder within the git repo to store backups
CME_GIT_BACKUP_FOLDER=a14-con

# Git credentials (only required if repository requires authentication)
CME_GIT_HTTP_USERNAME=
CME_GIT_HTTP_TOKEN=

# =============================================================================
# DISCORD BOT CONFIGURATION
# =============================================================================
# Get your bot token from https://discord.com/developers/applications
DISCORD_BOT_TOKEN=CHANGE_ME_DISCORD_BOT_TOKEN

# Discord security settings (optional - leave empty to allow all)
# Restrict bot to specific guild (server) ID
ALLOWED_GUILD_ID=

# Restrict bot to specific channel IDs (comma-separated)
# Example: ALLOWED_CHANNEL_IDS=123456789,987654321
ALLOWED_CHANNEL_IDS=

# Command prefix (default: !cme)
COMMAND_PREFIX=!cme
